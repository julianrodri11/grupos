<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>javax.faces.PROJECT_STAGE</param-name>
        <param-value>Development</param-value>
    </context-param>
    <servlet>
        <servlet-name>Faces Servlet</servlet-name>
        <servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>Faces Servlet</servlet-name>
        <url-pattern>/faces/*</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>faces/index.xhtml</welcome-file>
    </welcome-file-list>
    <error-page>
        <error-code>404</error-code>
        <location>/welcomePrimefaces.xhtml</location>
    </error-page>
    <security-constraint>
        <display-name>adminConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>adminGrupos</web-resource-name>
            <description/>
            <url-pattern>/faces/articulo/*</url-pattern>
            <url-pattern>/faces/editorial/*</url-pattern>
            <url-pattern>/faces/estdoInvestigador/*</url-pattern>
            <url-pattern>/faces/evento/*</url-pattern>
            <url-pattern>/faces/formacionAcademica/*</url-pattern>
            <url-pattern>/faces/gruposInvestigacion/*</url-pattern>
            <url-pattern>/faces/investigador/*</url-pattern>
            <url-pattern>/faces/libro/*</url-pattern>
            <url-pattern>/faces/ponencias/*</url-pattern>
            <url-pattern>/faces/revista/*</url-pattern>
            <url-pattern>/faces/tipoCategoria/*</url-pattern>
            <url-pattern>/faces/tipoEvento/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>adminRole</role-name>
        </auth-constraint>
    </security-constraint>
    <security-constraint>
        <display-name>investigadorConstraint</display-name>
        <web-resource-collection>
            <web-resource-name>investigadorInve</web-resource-name>
            <description/>
            <url-pattern>/faces/investigador/*</url-pattern>
            <url-pattern>/faces/articulo/*</url-pattern>
            <url-pattern>/faces/libro/*</url-pattern>
            <url-pattern>/faces/ponencia/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <description/>
            <role-name>investigadorRole</role-name>
        </auth-constraint>
    </security-constraint>
    <login-config>
        <auth-method>FORM</auth-method>
        <realm-name>jdbc-gi-realm</realm-name>
        <form-login-config>
            <form-login-page>/login/login_form_1.xhtml</form-login-page>
            <form-error-page>/login/login_error.xhtml</form-error-page>
        </form-login-config>
    </login-config>
    <security-role>
        <description/>
        <role-name>adminRole</role-name>
    </security-role>
    <security-role>
        <description/>
        <role-name>investigadorRole</role-name>
    </security-role>
    <context-param>
        <param-name>primefaces.THEME</param-name>
        <param-value>tema</param-value>
    </context-param>
</web-app>
